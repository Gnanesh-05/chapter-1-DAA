#include <stdio.h>

int climbStairs(int n) {
    if (n == 1) {
        return 1;
    }
    
    int first = 1;
    int second = 2;
    int next;
    
    for (int i = 3; i <= n; i++) {
        next = first + second;
        first = second;
        second = next;
    }
    
    return second;
}

int main() {
    int n = 5;
    printf("Number of distinct ways to climb %d steps: %d\n", n, climbStairs(n));
    return 0;
}
